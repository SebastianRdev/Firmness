<main class="flex-1 p-6 sm:p-8 lg:p-10">
    <div class="max-w-4xl mx-auto">
        <!-- Breadcrumbs -->
        <div class="flex flex-wrap gap-2 mb-4">
            <a class="text-[#4e7397] dark:text-slate-400 text-sm font-medium leading-normal hover:text-primary dark:hover:text-primary" href="#">Home</a>
            <span class="text-[#4e7397] dark:text-slate-400 text-sm font-medium leading-normal">/</span>
            <a class="text-[#4e7397] dark:text-slate-400 text-sm font-medium leading-normal hover:text-primary dark:hover:text-primary" href="#">Productos</a>
            <span class="text-[#4e7397] dark:text-slate-400 text-sm font-medium leading-normal">/</span>
            <span class="text-[#0e141b] dark:text-slate-200 text-sm font-medium leading-normal">Edit product</span>
        </div>
        <!-- Page Heading -->
        <div class="flex flex-wrap justify-between gap-3 mb-8">
            <p class="text-[#0e141b] dark:text-white text-4xl font-black leading-tight tracking-[-0.033em] min-w-72">Edit product</p>
        </div>
        <!-- Form Container -->
        <div class="bg-white dark:bg-slate-900/70 p-6 sm:p-8 rounded-xl shadow-sm border border-slate-200 dark:border-slate-800">
            <form class="grid grid-cols-1 md:grid-cols-2 gap-x-6 gap-y-6">
                <!-- Id (Read-only) -->
                <div class="md:col-span-2">
                    <label class="flex flex-col">
                        <p class="text-sm font-medium leading-normal pb-2 text-[#0e141b] dark:text-slate-300">Id</p>
                        <input class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-lg text-[#4e7397] dark:text-slate-400 focus:outline-0 focus:ring-0 border border-[#d0dbe7] dark:border-slate-700 bg-slate-100 dark:bg-slate-800 focus:border-[#d0dbe7] dark:focus:border-slate-600 h-12 placeholder:text-[#4e7397] px-4 text-base font-normal leading-normal cursor-not-allowed" readonly="" type="text" value="PROD-00123"/>
                    </label>
                </div>
                <!-- Name -->
                <div>
                    <label class="flex flex-col">
                        <p class="text-sm font-medium leading-normal pb-2 text-[#0e141b] dark:text-slate-300">Name</p>
                        <input class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-lg text-[#0e141b] dark:text-slate-200 focus:outline-0 focus:ring-2 focus:ring-primary/50 border border-[#d0dbe7] dark:border-slate-700 bg-white dark:bg-slate-900 focus:border-primary dark:focus:border-primary h-12 placeholder:text-[#4e7397] px-4 text-base font-normal leading-normal" placeholder="e.g. Martillo Demoledor Eléctrico" type="text" value="Martillo Demoledor Eléctrico GHD-2500"/>
                    </label>
                </div>
                <!-- Code -->
                <div>
                    <label class="flex flex-col">
                        <p class="text-sm font-medium leading-normal pb-2 text-[#0e141b] dark:text-slate-300">Code</p>
                        <input class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-lg text-[#0e141b] dark:text-slate-200 focus:outline-0 focus:ring-2 focus:ring-primary/50 border border-[#d0dbe7] dark:border-slate-700 bg-white dark:bg-slate-900 focus:border-primary dark:focus:border-primary h-12 placeholder:text-[#4e7397] px-4 text-base font-normal leading-normal" placeholder="e.g. SKU-HAM-001" type="text" value="SKU-HAM-001"/>
                    </label>
                </div>
                <!-- Category -->
                <div>
                    <label class="flex flex-col">
                        <p class="text-sm font-medium leading-normal pb-2 text-[#0e141b] dark:text-slate-300">Category</p>
                        <select class="form-select flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-lg text-[#0e141b] dark:text-slate-200 focus:outline-0 focus:ring-2 focus:ring-primary/50 border border-[#d0dbe7] dark:border-slate-700 bg-white dark:bg-slate-900 focus:border-primary dark:focus:border-primary h-12 placeholder:text-[#4e7397] px-4 text-base font-normal leading-normal">
                            <option>Herramientas Eléctricas</option>
                            <option selected="">Maquinaria Pesada</option>
                            <option>Andamios</option>
                            <option>Equipos de Seguridad</option>
                        </select>
                    </label>
                </div>
                <!-- Price -->
                <div>
                    <label class="flex flex-col">
                        <p class="text-sm font-medium leading-normal pb-2 text-[#0e141b] dark:text-slate-300">Price</p>
                        <div class="relative">
                            <span class="absolute inset-y-0 left-0 flex items-center pl-4 text-[#4e7397] dark:text-slate-400">$</span>
                            <input class="form-input pl-8 flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-lg text-[#0e141b] dark:text-slate-200 focus:outline-0 focus:ring-2 focus:ring-red-500/50 border border-red-500 dark:border-red-500 bg-white dark:bg-slate-900 focus:border-red-500 dark:focus:border-red-500 h-12 placeholder:text-[#4e7397] px-4 text-base font-normal leading-normal" placeholder="0.00" type="number" value="abc"/>
                        </div>
                    </label>
                </div>
                <!-- Stock -->
                <div>
                    <label class="flex flex-col">
                        <p class="text-sm font-medium leading-normal pb-2 text-[#0e141b] dark:text-slate-300">Stock</p>
                        <input class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-lg text-[#0e141b] dark:text-slate-200 focus:outline-0 focus:ring-2 focus:ring-primary/50 border border-[#d0dbe7] dark:border-slate-700 bg-white dark:bg-slate-900 focus:border-primary dark:focus:border-primary h-12 placeholder:text-[#4e7397] px-4 text-base font-normal leading-normal" placeholder="0" type="number" value="15"/>
                    </label>
                </div>
                <!-- Description -->
                <div class="md:col-span-2">
                    <label class="flex flex-col">
                        <p class="text-sm font-medium leading-normal pb-2 text-[#0e141b] dark:text-slate-300">Description</p>
                        <textarea class="form-textarea flex w-full min-w-0 flex-1 resize-y overflow-hidden rounded-lg text-[#0e141b] dark:text-slate-200 focus:outline-0 focus:ring-2 focus:ring-primary/50 border border-[#d0dbe7] dark:border-slate-700 bg-white dark:bg-slate-900 focus:border-primary dark:focus:border-primary min-h-28 placeholder:text-[#4e7397] p-4 text-base font-normal leading-normal" placeholder="Agrega una descripción detallada del producto...">Martillo demoledor eléctrico de alta potencia para trabajos de construcción y demolición. Ideal para romper hormigón y asfalto.</textarea>
                    </label>
                </div>
                <!-- Active Checkbox -->
                <div class="md:col-span-2 flex items-center gap-3">
                    <input checked="" class="form-checkbox h-5 w-5 rounded text-primary bg-slate-100 dark:bg-slate-800 border-slate-300 dark:border-slate-600 focus:ring-primary" id="activo" type="checkbox"/>
                    <label class="text-sm font-medium text-[#0e141b] dark:text-slate-300" for="active">Active</label>
                </div>
                <!-- Action Buttons -->
                <div class="md:col-span-2 flex justify-end items-center gap-3 pt-4 mt-4 border-t border-slate-200 dark:border-slate-800">
                    <button class="px-5 py-2.5 rounded-lg text-sm font-semibold text-center text-[#0e141b] dark:text-slate-200 bg-slate-100 dark:bg-slate-800 hover:bg-slate-200 dark:hover:bg-slate-700 transition-colors" type="button">Cancel</button>
                    <button class="px-5 py-2.5 rounded-lg text-sm font-semibold text-center text-white bg-primary hover:bg-primary/90 transition-colors flex items-center gap-2" type="submit">
                        <span class="material-symbols-outlined text-base">save</span>
                        Save changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</main>